<!DOCTYPE html>
<html>

<head>
    <title>
        <%= pageName %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
        rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'color-primary': 'var(--color-primary)',
                        'color-primary-light': 'var(--color-primary-light)',
                        'color-gray-light': 'var(--color-gray-light)',
                        'color-gray-light-2': 'var(--color-gray-light-2)',
                        'color-gray': 'var(--color-gray)',
                        'color-bg': 'var(--color-bg)',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="https://cdn.hugeicons.com/font/hgi-stroke-rounded.css" />
    <link rel="icon" href="assets/logo.svg" type="image/x-icon" />
</head>

<body>
    <div class="w-full h-dvh flex flex-col items-center gap-6 justify-center">
        <div class="flex items-center gap-4">
            <img src="/assets/logo.svg" alt="Logo" class="h-10 w-10" />

            <h1 class="text-2xl font-semibold text-color-bg">Provider</h1>
        </div>
        <form onsubmit="(function(e){ e.preventDefault(); return false; })(event)"
            class="flex flex-col gap-4 w-full md:w-fit h-fit p-8 bg-white rounded-lg border border-color-gray-light-2">

            <div class="flex items-center gap-2 justify-center">
                <a href="/">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="28" height="28" color="#000000"
                        fill="none">
                        <path d="M15 6C15 6 9.00001 10.4189 9 12C8.99999 13.5812 15 18 15 18" stroke="#000000"
                            stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                </a>
                <h1 class="font-semibold text-center text-2xl text-color-bg">Fazer Registro</h1>
            </div>

            <div class="flex flex-row bg-color-gray-light w-full gap-2 p-1.5 rounded-xl">
                <a href="/signup?r=0" class="<%- roleId == 0 ? " bg-color-primary text-white"
                    : "bg-white text-color-bg border border-color-gray-light-2" -%> outline-none w-full h-10
                    rounded-lg text-sm font-semibold flex items-center justify-center"
                    type="button">Cliente</a>
                <a href="/signup?r=1" class="<%- roleId == 1 ? " bg-color-primary text-white"
                    : "bg-white text-color-bg border border-color-gray-light-2" -%> outline-none w-full h-10
                    rounded-lg text-sm font-semibold flex items-center justify-center"
                    type="button">Provedor</a>
            </div>

            <div class="flex flex-col gap-2 my-2">
                <div class="flex flex-col gap-0.5">
                    <label class="text-sm font-medium text-color-bg" for="input-username">Nome de
                        usuário</label>
                    <input
                        class="placeholder-color-gray p-4 outline-2 outline-color-primary bg-white w-full text-color-bg h-10 rounded-lg text-sm font-medium border border-color-gray-light-2"
                        id="input-username" type="username" placeholder="Digite o nome de usuário">
                </div>
                <div class="flex flex-col gap-0.5">
                    <label class="text-sm font-medium text-color-bg" for="input-password">Senha</label>
                    <input
                        class="placeholder-color-gray p-4 outline-2 outline-color-primary bg-white w-full text-color-bg h-10 rounded-lg text-sm font-medium border border-color-gray-light-2"
                        id="input-password" autocomplete="current-password" type="password"
                        placeholder="Digite a sua senha">
                </div>
                <div class="flex flex-col gap-0.5">
                    <label class="text-sm font-medium text-color-bg">Localização para encontrar serviços</label>
                    <div class="flex items-center gap-2">
                        <input
                            class="placeholder-color-gray p-4 outline-2 outline-color-primary bg-white w-full md:w-24  text-color-bg h-10 rounded-lg text-sm font-medium border border-color-gray-light-2"
                            id="input-location-city" type="text" placeholder="Cidade">
                        <input
                            class="placeholder-color-gray p-4 outline-2 outline-color-primary bg-white w-full md:w-24 text-color-bg h-10 rounded-lg text-sm font-medium border border-color-gray-light-2"
                            id="input-location-state" type="text" placeholder="Estado">
                        <input
                            class="placeholder-color-gray p-4 outline-2 outline-color-primary bg-white w-full md:w-24 text-color-bg h-10 rounded-lg text-sm font-medium border border-color-gray-light-2"
                            id="input-location-neighborhood" type="text" placeholder="Bairro">
                        <input
                            class="placeholder-color-gray p-4 outline-2 outline-color-primary bg-white w-full md:w-24 text-color-bg h-10 rounded-lg text-sm font-medium border border-color-gray-light-2"
                            id="input-location-street" type="text" placeholder="Rua">
                    </div>
                </div>
                <% if (roleId==1) { %>
                    <div class="flex flex-col gap-0.5">
                        <label class="text-sm font-medium text-color-bg" for="input-location">Nome do serviço</label>
                        <input
                            class="placeholder-color-gray p-4 outline-2 outline-color-primary bg-white w-full text-color-bg h-10 rounded-lg text-sm font-medium border border-color-gray-light-2"
                            id="input-service-name" type="text" placeholder="Digite o nome do serviço">
                    </div>
                    <div class="flex flex-col gap-0.5">
                        <label class="text-sm font-medium text-color-bg" for="input-service-category">Categoria do
                            serviço</label>
                        <select
                            class="placeholder-color-gray px-4 outline-2 outline-color-primary bg-white w-full text-color-bg h-10 rounded-lg text-sm font-medium border border-color-gray-light-2"
                            id="input-service-category">
                            <option value="" disabled selected>Selecione uma categoria</option>
                            <% categories.forEach(category=> { %>
                                <option value="<%= category.name %>">
                                    <%= category.name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                    <div class="flex flex-col gap-0.5">
                        <label class="text-sm font-medium text-color-bg" for="input-service-link">Link de
                            contato</label>
                        <input
                            class="placeholder-color-gray p-4 outline-2 outline-color-primary bg-white w-full text-color-bg h-10 rounded-lg text-sm font-medium border border-color-gray-light-2"
                            id="input-service-link" type="text" placeholder="Digite o link de contato para o serviço">
                    </div>
                    <% } %>
            </div>

            <p class="font-medium text-sm text-color-bg">Já tem uma conta? <a class="font-bold text-color-primary"
                    href="/login?r=<%-roleId-%>">Login</a></p>

            <button onclick="signup()"
                class="hover:bg-color-bg outline-none bg-color-primary w-full text-white h-10 rounded-lg text-sm font-medium"
                type="submit">Começar</button>
    </div>
    </div>

    <script>
        var parseQueryString = function () {
            var str = window.location.search;
            var objURL = {};

            str.replace(
                new RegExp("([^?=&]+)(=([^&]*))?", "g"),
                function ($0, $1, $2, $3) {
                    objURL[$1] = $3;
                }
            );
            return objURL;
        };

        if (parseQueryString()["r"] != 0 && parseQueryString()["r"] != 1) {
            window.location.href = decodeURIComponent('/signup?r=0')
        }

        const signupProvider = () => {
            const username = document.querySelector('#input-username').value
            const locationCity = document.querySelector('#input-location-city').value
            const locationState = document.querySelector('#input-location-state').value
            const locationNeighborhood = document.querySelector('#input-location-neighborhood').value
            const locationStreet = document.querySelector('#input-location-street').value
            const serviceName = document.querySelector('#input-service-name').value
            const serviceCategory = document.querySelector('#input-service-category').value
            const serviceLink = document.querySelector('#input-service-link').value

            let services = JSON.parse(decodeURIComponent('<%- encodeURIComponent(JSON.stringify(services || [])) %>'));
            if (!services) {
                services = [];
            }
            let users = JSON.parse(decodeURIComponent('<%- encodeURIComponent(JSON.stringify(users || [])) %>'));
            if (!users) {
                users = [];
            }

            if (!username || !locationCity || !locationState || !locationNeighborhood || !locationStreet ||
                !serviceName || !serviceCategory || !serviceLink) {
                alert('Por favor, preencha todos os campos.')
                return
            }

            if (users.some(user => user.username === username && user.roleId === parseInt(parseQueryString()["r"]))) {
                alert('Este usuário já existe. Por favor, escolha outro nome de usuário.')
                return
            }

            const serviceId = Math.floor(Math.random() * 1000000) + 1;

            const newService = {
                id: serviceId,
                name: serviceName,
                category: serviceCategory,
                link: serviceLink,
                location: {
                    city: locationCity,
                    state: locationState,
                    neighborhood: locationNeighborhood,
                    street: locationStreet
                },
                contact: serviceLink,
                stars: 0,
                favorite: false
            }

            services.push(newService);

            window.location.href = decodeURIComponent(`/?u=${username}&r=${parseQueryString()["r"]}&lc=${locationCity}&ls=${locationState}&ln=${locationNeighborhood}&lst=${locationStreet}&si=${serviceId}&sn=${serviceName}&sc=${serviceCategory}&sl=${serviceLink}`);
        }

        const signup = () => {
            if (parseQueryString()["r"] == 1) {
                signupProvider()
            } else if (parseQueryString()["r"] == 0) {
                const username = document.querySelector('#input-username').value
                const locationCity = document.querySelector('#input-location-city').value
                const locationState = document.querySelector('#input-location-state').value
                const locationNeighborhood = document.querySelector('#input-location-neighborhood').value
                const locationStreet = document.querySelector('#input-location-street').value

                if (!username || !locationCity || !locationState || !locationNeighborhood || !locationStreet) {
                    alert('Por favor, preencha todos os campos.')
                    return
                }

                window.location.href = decodeURIComponent(`/?u=${username}&r=${parseQueryString()["r"]}&lc=${locationCity}&ls=${locationState}&ln=${locationNeighborhood}&lst=${locationStreet}`);
            }
        }
    </script>
</body>

</html>