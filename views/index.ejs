<!-- HEADER -->
<%- include("./partials/header.ejs") -%>
  <div class="w-full flex flex-col md:flex-row flex-wrap pt-20">
    <!-- SIDEBAR -->
    <%- include("./partials/sidebar.ejs") -%>
      <div class="flex flex-col flex-wrap px-10 py-8 gap-6">
        <!-- CATEGORIES -->
        <% if (!(currentPath.includes("/favorites"))) { %>
          <ul class="flex flex-row items-center flex-wrap gap-12 overflow-x-auto">
            <% categories.forEach(function(category) {%>
              <a href="<%= category.name.toLowerCase() === 'todos' ? '/' : '/category/' + category.name.toLowerCase() %>"
