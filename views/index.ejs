                <div id="iconCategory" name="<%=category.name.toLowerCase()%>"
                  class="flex items-center justify-center w-16 h-16 rounded-full border border-color-gray-light-2 bg-white">
                  <%- category.icon %>
                </div>

                <p class="text-xs font-medium text-color-text">
                  <%= category.name %>
                </p>
              </a>
              <% }); %>
          </ul>
          <% } %>
